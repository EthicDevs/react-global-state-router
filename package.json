{
  "name": "@ethicdevs/react-global-state-router",
  "version": "0.4.0",
  "description": "A tiny cross-target (web, native) router that complements react-global-state-hooks",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "William Nemencha",
    "email": "william@ethicdevs.com",
    "url": "https://ethicdevs.com/devlog/wnemencha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EthicDevs/react-global-state-router"
  },
  "keywords": [
    "react",
    "react-native",
    "global-state",
    "router",
    "react-hooks",
    "userouter"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "typecheck": "tsc --noEmit",
    "dev": "nodemon -e ts,.env -w .env -w . -x 'run-s build:ts test'",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s test build"
  },
  "devDependencies": {
    "@ethicdevs/react-global-state-hooks": "^0.4.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "@ethicdevs/react-global-state-hooks": "^0.4.2",
    "react": ">=16.8.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
